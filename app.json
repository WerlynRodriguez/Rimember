{
  "expo": {
    "name": "Rimember",
    "slug": "Rimember",
    "version": "1.0.0",
    "icon": "./assets/logo.png",
    "scheme": "rimember",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "requireFullScreen": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow Rimember to access your photos.",
        "NSPhotoLibraryAddUsageDescription": "Allow Rimember to save photos."
      }
    },
    "android": {
      "requireFullScreen": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo.png",
        "backgroundColor": "#000000"
      },
      "permissions": [
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_MEDIA_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Rimember to access your photos.",
          "savePhotosPermission": "Allow Rimember to save photos.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-screen-orientation",
        {
          "initialOrientation": "DEFAULT"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "736ca19c-15d6-498f-8726-c1995ec83e6b"
      }
    }
  }
}
